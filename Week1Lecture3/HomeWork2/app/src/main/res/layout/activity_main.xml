<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<TextView
    android:id="@+id/maharishi_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:textColor="@color/CustomColor"
    android:textSize="25dp"
    android:layout_gravity="center"
    android:text="Maharishi International University"
    />

    <Button
        android:id="@+id/background_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Background"
        android:textAllCaps="false"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />

    <ImageButton
        android:id="@+id/maharishi_image_logo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/miulogo"
        android:padding="50dp"
        android:background="@color/white"
        />

</LinearLayout>